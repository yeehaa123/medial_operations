%article.syllabus
  = render course

  %section.course_program
    %h1 Course Program
    - if meetings.size > 0 && meetings.first.section == nil
      = render meetings.first
    - if meetings.size > 0 && meetings[1].section == nil
      = render meetings[1]
    - if sections.size > 0
      = render sections
    - else
      = render meetings
