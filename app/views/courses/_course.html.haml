- present course do |course_presenter|
  = content_tag_for(:section, course) do
    %hgroup.course_title
      %div.course_prefix= course.title_prefix
      %h1= course_presenter.heading

    %section.course_description
      = course_presenter.description

    - works_cited(course.references, "Textbook")

    %section.course_prerequisites
      %h1 Prerequisites
      = course_presenter.prerequisites

    %section.course_requirements
      %h1 Requirements
      = course_presenter.requirements

